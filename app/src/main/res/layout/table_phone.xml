<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:id="@+id/table_container"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/double_height"
        android:text="@string/phone_calc"
        android:id="@+id/r1c0"
        android:tag="r1c0"
        android:textSize="@dimen/textSize"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"
        android:minWidth="350dp"
        android:background="@color/th"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/double_height"
        android:text="@string/no_tax"
        android:id="@+id/r1c1"
        android:tag="r1c1"
        android:textSize="@dimen/textSize"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"
        android:layout_toRightOf="@+id/r1c0"
        android:layout_toEndOf="@+id/r1c0"
        android:background="@color/th"
        android:layout_alignTop="@+id/r1c0"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/double_height"
        android:text="@string/tax"
        android:id="@+id/r1c2"
        android:tag="r1c2"
        android:textSize="@dimen/textSize"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"
        android:layout_toRightOf="@+id/r1c1"
        android:layout_toEndOf="@+id/r1c1"
        android:background="@color/th"
        android:layout_alignTop="@+id/r1c0"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/double_height"
        android:text="@string/phone_sum"
        android:id="@+id/r1c3"
        android:tag="r1c3"
        android:textSize="@dimen/textSize"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"
        android:layout_toRightOf="@+id/r1c2"
        android:layout_toEndOf="@+id/r1c2"
        android:background="@color/th"
        android:minWidth="70dp"
        android:gravity="center_vertical|center"
        android:layout_alignTop="@+id/r1c0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_rate"
        android:id="@+id/r2c0"
        android:tag="r2c0"
        android:textSize="@dimen/textSize"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"
        android:layout_below="@+id/r1c0"
        android:layout_alignRight="@+id/r1c0"
        android:layout_alignEnd="@+id/r1c0"
        android:layout_alignLeft="@+id/r1c0"
        android:layout_alignStart="@+id/r1c0"
        android:background="@color/th" />

    <EditText
        android:background="@color/tc"
        android:imeOptions="flagNoExtractUi"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/r2c1"
        android:tag="r2c1"
        android:textSize="@dimen/textSize"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"
        android:inputType="numberDecimal"
        android:layout_toRightOf="@+id/r1c0"
        android:layout_toEndOf="@+id/r1c0"
        android:layout_below="@+id/r1c0"
        android:layout_alignRight="@+id/r1c1"
        android:layout_alignEnd="@+id/r1c1"
        android:layout_alignBottom="@+id/r2c0"
        android:lines="1" />

    <EditText
        android:background="@color/tc"
        android:imeOptions="flagNoExtractUi"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/r2c2"
        android:tag="r2c2"
        android:textSize="@dimen/textSize"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"
        android:inputType="numberDecimal"
        android:layout_toRightOf="@+id/r1c1"
        android:layout_toEndOf="@+id/r1c1"
        android:layout_below="@+id/r1c0"
        android:layout_alignBottom="@+id/r2c0"
        android:layout_alignRight="@+id/r1c2"
        android:layout_alignEnd="@+id/r1c2"
        android:lines="1"/>

    <EditText
        android:background="@color/tc"
        android:imeOptions="flagNoExtractUi"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/r2c3"
        android:tag="r2c3"
        android:textSize="@dimen/textSize"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"
        android:inputType="numberDecimal"
        android:layout_toRightOf="@+id/r1c2"
        android:layout_toEndOf="@+id/r1c2"
        android:layout_below="@+id/r1c0"
        android:layout_alignBottom="@+id/r2c0"
        android:layout_alignRight="@+id/r1c3"
        android:layout_alignEnd="@+id/r1c3"
        android:lines="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/radio_rate"
        android:id="@+id/r3c0"
        android:tag="r3c0"
        android:textSize="@dimen/textSize"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"
        android:layout_below="@+id/r2c0"
        android:layout_alignRight="@+id/r1c0"
        android:layout_alignEnd="@+id/r1c0"
        android:layout_alignLeft="@+id/r1c0"
        android:layout_alignStart="@+id/r1c0"
        android:background="@color/th" />

    <EditText
        android:background="@color/tc"
        android:imeOptions="flagNoExtractUi"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/r3c1"
        android:tag="r3c1"
        android:textSize="@dimen/textSize"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"
        android:inputType="numberDecimal"
        android:layout_toRightOf="@+id/r1c0"
        android:layout_toEndOf="@+id/r1c0"
        android:layout_below="@+id/r2c0"
        android:layout_alignRight="@+id/r1c1"
        android:layout_alignEnd="@+id/r1c1"
        android:lines="1" />

    <EditText
        android:background="@color/tc"
        android:imeOptions="flagNoExtractUi"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/r3c2"
        android:tag="r3c2"
        android:textSize="@dimen/textSize"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"
        android:inputType="numberDecimal"
        android:layout_toRightOf="@+id/r1c1"
        android:layout_toEndOf="@+id/r1c1"
        android:layout_below="@+id/r2c0"
        android:layout_alignRight="@+id/r1c2"
        android:layout_alignEnd="@+id/r1c2"
        android:lines="1" />

    <EditText
        android:background="@color/tc"
        android:imeOptions="flagNoExtractUi"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/r3c3"
        android:tag="r3c3"
        android:textSize="@dimen/textSize"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"
        android:inputType="numberDecimal"
        android:layout_toRightOf="@+id/r1c2"
        android:layout_toEndOf="@+id/r1c2"
        android:layout_below="@+id/r2c0"
        android:layout_alignRight="@+id/r1c3"
        android:layout_alignEnd="@+id/r1c3"
        android:lines="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_total"
        android:id="@+id/r4c0"
        android:tag="r4c0"
        android:textSize="@dimen/textSize"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"
        android:layout_below="@+id/r3c0"
        android:layout_alignRight="@+id/r1c0"
        android:layout_alignEnd="@+id/r1c0"
        android:layout_alignLeft="@+id/r1c0"
        android:layout_alignStart="@+id/r1c0"
        android:background="@color/th"
        android:gravity="end" />

    <EditText
        android:background="@color/tc"
        android:imeOptions="flagNoExtractUi"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/r4c1"
        android:tag="r4c1"
        android:textSize="@dimen/textSize"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"
        android:inputType="numberDecimal"
        android:layout_toRightOf="@+id/r1c0"
        android:layout_toEndOf="@+id/r1c0"
        android:layout_below="@+id/r3c0"
        android:layout_alignRight="@+id/r1c1"
        android:layout_alignEnd="@+id/r1c1"
        android:lines="1" />

    <EditText
        android:background="@color/tc"
        android:imeOptions="flagNoExtractUi"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/r4c2"
        android:tag="r4c2"
        android:textSize="@dimen/textSize"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"
        android:inputType="numberDecimal"
        android:layout_toRightOf="@+id/r1c1"
        android:layout_toEndOf="@+id/r1c1"
        android:layout_below="@+id/r3c0"
        android:layout_alignRight="@+id/r1c2"
        android:layout_alignEnd="@+id/r1c2"
        android:lines="1" />

    <EditText
        android:background="@color/tc"
        android:imeOptions="flagNoExtractUi"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/r4c3"
        android:tag="r4c3"
        android:textSize="@dimen/textSize"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"
        android:inputType="numberDecimal"
        android:layout_toRightOf="@+id/r1c2"
        android:layout_toEndOf="@+id/r1c2"
        android:layout_below="@+id/r3c0"
        android:layout_alignRight="@+id/r1c3"
        android:layout_alignEnd="@+id/r1c3"
        android:lines="1" />

    <LinearLayout
        android:id="@+id/segments_container"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_toRightOf="@+id/r2c3"
        android:layout_toEndOf="@+id/r2c3"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />

    <ImageButton
        android:src="@mipmap/segmentation_icon"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_toRightOf="@+id/segments_container"
        android:layout_toEndOf="@+id/segments_container"
        android:layout_alignTop="@+id/segments_container"
        android:layout_alignBottom="@+id/r4c3" />
</RelativeLayout>